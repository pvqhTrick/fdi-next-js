{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, next-env.d.ts, .env, .env.sampe",
    "next.config.*": "jsconfig*, cypress.config.*, playwright.config.*,  .eslint*, eslint*, .prettier*, prettier*, .editorconfig, commitlint.config.cjs, .gitignore, postcss.config.mjs, .dockerignore",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": true,
  "[css]": {
    "editor.formatOnSave": false
  },
  "[handlebars]": {
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "tailwindCSS.experimental.configFile": "src/tailwind.css"
}
